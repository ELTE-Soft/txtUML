<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>hu.elte.txtuml</groupId>
		<artifactId>hu.elte.txtuml.parent</artifactId>
		<version>0.6.0-SNAPSHOT</version>
		<relativePath>../../releng/hu.elte.txtuml.parent/pom.xml</relativePath>
	</parent>
	<artifactId>hu.elte.txtuml.export.uml2.tests</artifactId>
	<packaging>eclipse-test-plugin</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<osgiDataDirectory>${basedir}/work</osgiDataDirectory>
					<deleteOsgiDataDirectory>false</deleteOsgiDataDirectory> 		
				</configuration>
			</plugin>
			<plugin>
			   <groupId>org.eclipse.tycho</groupId>
			   <artifactId>target-platform-configuration</artifactId>
			   <version>${tycho.version}</version>
			   <configuration>
			      <dependency-resolution>
			         <extraRequirements>
			      
			            <requirement>
			               <type>eclipse-plugin</type>
			               <id>hu.elte.txtuml.stdlib</id>
			               <versionRange>0.0.0</versionRange>
			            </requirement>
			            <requirement>
                           <type>eclipse-plugin</type>
                           <id>hu.elte.txtuml.project</id>
                           <versionRange>0.0.0</versionRange>
                        </requirement>
                   
			         </extraRequirements>
			      </dependency-resolution>
			   </configuration>
			</plugin>
		</plugins>
	</build>

</project>
