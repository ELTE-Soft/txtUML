<?xml version="1.0" encoding="UTF-8" ?>
<templates>
<template
	id="signal"
	name="signal"
	description="signal"
	context="hu.elte.txtuml.xtxtuml.XtxtUML.TUSignal"
	>signal ${name} {
	${cursor}
}</template>
<template
	id="association"
	name="association"
	description="association"
	context="hu.elte.txtuml.xtxtuml.XtxtUML.TUAssociation"
	>association ${name} {
	${multiplicityA} ${classA} ${endAName};
	${multiplicityB} ${classB} ${endBName};
}</template>
<!-- TODO the second 'cursor' is ignored in template 'state_with_activities' -->
<template
	id="state_with_activities"
	name="state_with_activities"
	description="state with entry and exit activities"
	context="hu.elte.txtuml.xtxtuml.XtxtUML.TUState"
	>state ${name} {
	entry {
		${cursor}
	}
	exit {
		${cursor}
	}
}</template>
<template
	id="transition"
	name="transition"
	description="transition"
	context="hu.elte.txtuml.xtxtuml.XtxtUML.TUTransition"
	>transition ${name} {
	from ${sourceState};
	to ${targetState};
	trigger ${signal};
}</template>
<template
	id="transition_without_trigger"
	name="transition_without_trigger"
	description="transition without trigger"
	context="hu.elte.txtuml.xtxtuml.XtxtUML.TUTransition"
	>transition ${name} {
	from ${sourceState};
	to ${targetState};
}</template>
<template
	id="transition_with_port"
	name="transition_with_port"
	description="transition with port"
	context="hu.elte.txtuml.xtxtuml.XtxtUML.TUTransition"
	>transition ${name} {
	from ${sourceState};
	to ${targetState};
	trigger	${signal};
	port ${port};
}</template>
<template
	id="port"
	name="port"
	description="port"
	context="hu.elte.txtuml.xtxtuml.XtxtUML.TUPort"
	>port ${name} {
	provided ${providedInterface};
	required ${requiredInterface};
}</template>
<template
	id="behavior_port"
	name="behavior_port"
	description="behavior port"
	context="hu.elte.txtuml.xtxtuml.XtxtUML.TUPort"
	>behavior port ${name} {
	provided ${providedInterface};
	required ${requiredInterface};
}</template>
</templates>
